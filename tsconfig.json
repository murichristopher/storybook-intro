{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx", // ? https://devblogs.microsoft.com/typescript/announcing-typescript-4-1/#jsx-factories
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "rootDir": "src" // ? https://github.com/rollup/plugins/issues/287
  },
  "include": ["**/*.ts"] // ? https://github.com/rollup/plugins/issues/287
}
